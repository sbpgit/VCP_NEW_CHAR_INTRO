<mvc:View controllerName="vcpapp.vcpnpicharvalue.controller.ItemMaster"
    xmlns:mvc="sap.ui.core.mvc" xmlns:core="sap.ui.core"
	 xmlns="sap.m" xmlns:m="sap.m" xmlns:l="sap.ui.layout" xmlns:ux="sap.uxap" xmlns:f="sap.ui.layout.form"
	xmlns:html="http://www.w3.org/1999/xhtml" xmlns:u="sap.ui.unified">
    <Page id="idPage" showFooter="true" showHeader="false" >
	<ux:ObjectPageLayout id="ObjectPageLayout" showFooter="true" headerContentPinnable="true">
		
		<ux:sections>
			<ux:ObjectPageSection id="idObjPageSec">
				<ux:subSections>
					<ux:ObjectPageSubSection id="idObjPageSubSec">
						<ux:blocks>

                         <Table id="idTempDetails" growingScrollToLoad="true"  growing="true"
                              updateFinished="onTableUpdate" items="{path: '/tempDetails'}"  itemPress="onHandleSelect"  
                              mode="SingleSelectMaster"   selectionChange="onHandleSelect" rememberSelections="false"> 
                              <headerToolbar>
			                    <OverflowToolbar height="80px">
                                <VBox >
                                <HBox >
                                <SearchField id="newTabSearch" search="oHomesearch" liveChange="oHomesearch" width="200px" placeholder="UID, Product" class="sapUiTinyMarginEnd" />
                                <SearchField id="CharSearch" search="onSearchChar"  width="200px" placeholder="Characteristics Search" />
				                    </HBox>
                                    <Title id="NpiTitle" text="{i18n>npiTitle}" class="sapUiSmallMarginTop"></Title>
                                    </VBox>
                                    <ToolbarSpacer/>
                                    <VBox >
                                        <!-- <Label text="Config Product :"  class="sapUiTinyMarginTop sapUiSmallMarginEnd"/> -->
                                        <MultiInput id="idConfigProd" class="sapUiTinyMarginTop" width="250px" placeholder="Configurable Product" showValueHelp="true" valueHelpOnly="true" valueHelpRequest="handleValueHelp"  />
                                        <HBox >
                                        <Button text="Go" class="sapUiTinyMarginTop sapUiSmallMarginBeginEnd" type="Emphasized" press="onGetData" tooltip="Get data based on filters" />
                                        <Button text="Reset" type="Transparent" press="onResetData" tooltip="Reset" class="sapUiTinyMarginTop"/>
                                        <CheckBox text="Show Copy UID's" selected="false" select="onCheckChange" class="sapUiTinyMarginTop" />
                                        </HBox>
                                    </VBox>
			                    </OverflowToolbar>
		                      </headerToolbar>                             
                                <columns>
                                <!-- <Column hAlign="Center" width="auto" vAlign="Middle">
                                        <Text text="Project Id" />
                                    </Column>
                                    <Column hAlign="Center" width="auto" vAlign="Middle">
                                        <Text text="Product ID" />
                                    </Column> -->
                                    <Column hAlign="Center"  vAlign="Middle" >
                                        <Text text="Temp Unique ID" />
                                    </Column> 
                                    <Column hAlign="Center"  vAlign="Middle" >
                                        <Text text="Unique ID" />
                                    </Column> 
                                    <Column hAlign="Center"  vAlign="Middle" >
                                        <Text text="Reference Unique ID" />
                                    </Column> 
                                    <Column hAlign="Center"  vAlign="Middle" >
                                        <Text text="Reference Unique ID" />
                                    </Column> 
                                    <Column hAlign="Center" width="auto" vAlign="Middle">
                                        <Text text="Config Product" />
                                    </Column>
                                    <Column hAlign="Center" width="auto" vAlign="Middle">
                                        <Text text="Product" />
                                    </Column>
                                    <Column hAlign="Center" vAlign="Middle" width="100px">
                                        <Text text="Weightage" />
                                    </Column>

                                    <Column hAlign="Center" vAlign="Middle" width="auto">
                                        <Text text="UID Type" />
                                    </Column>
                                    <Column hAlign="Center" vAlign="Middle" width="auto">
                                        <Text text="UID Rate" />
                                    </Column>
                                    <Column hAlign="Center" vAlign="Middle" width="auto">
                                        <Text text="Active" />
                                    </Column>

                                      <Column hAlign="Center" width="150px" vAlign="Middle">
                                        <Text text="Valid From" />
                                    </Column> 
                                     <Column hAlign="Center" width="150px" vAlign="Middle">
                                        <Text text="Valid To" />
                                    </Column>   
                                    <Column hAlign="Center" width="150px" vAlign="Middle">
                                        <Text text="Copy of UID" />
                                    </Column>  
                                    <Column hAlign="Center" vAlign="Middle" width="auto">
                                        <Text text="" />
                                    </Column>                            
                                </columns>
                                <items>
                                    <ColumnListItem>
                                        <cells>
                                            <Text text="{TMP_UNIQUE_ID}" />
                                            <Text text="{UNIQUE_ID}" />
                                            <ObjectIdentifier title="{REF_UNIQUE_ID}" text="{TMP_UNIQUE_DESC}"/>
                                            <Text text="{REF_UNIQUE_ID}" />
                                            <Text text= "{PRODUCT_ID}" />
                                             <Text text= "{PARTIAL_PROD}" />
                                            <Input value= "{WEIGHTAGE}" liveChange="onInputChange" textAlign="Right" />

                                            <Text text= "{UID_TYPE}" />
                                            <Text text= "{UID_RATE}" />
                                            <Text text= "{ACTIVE}" />

                                            <DatePicker id="fromDate" value= "{VALID_FROM}" displayFormat="YYYY-MM-dd" valueFormat="YYYY-MM-dd" class="disabledInput" change="onFromDateChange" />
                                            <DatePicker id="toDate" value= "{VALID_TO}" displayFormat="YYYY-MM-dd" valueFormat="YYYY-MM-dd" class="disabledInput" change="onToDateChange"/>
                                            <Text text= "{=${COPY_UID} === 0 ? '' : [${path: 'COPY_UID'}]}" />
                                            <Button id="idDel" icon="sap-icon://delete" press="onDeleteUID"  />
                                            <!-- <Button id="idDel" icon="sap-icon://delete" press="onDeleteUID" visible="{oGModel>/delFlag}" /> -->
                                        </cells>
                                    </ColumnListItem>
                                </items>
                              </Table>	
                        </ux:blocks>
					</ux:ObjectPageSubSection>
				</ux:subSections>
			</ux:ObjectPageSection>
		</ux:sections>
	</ux:ObjectPageLayout>
  <footer>
    <OverflowToolbar>
                <ToolbarSpacer/>
                <Button id="idGen" text="Save" enabled="false" press="onGeneratePress" visible="false" type="Emphasized"/>
                <Button id="idSave" text="Save" enabled="true" press="onGeneratePress" visible="false" type="Emphasized"/>
                <!-- <Button text="Cancel"/> -->
            </OverflowToolbar>
            </footer>
    </Page>
</mvc:View>
