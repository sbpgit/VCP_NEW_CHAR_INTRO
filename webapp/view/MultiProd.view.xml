<mvc:View
    controllerName="vcpapp.vcpnpicharvalue.controller.MultiProd"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:m="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:ux="sap.uxap"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
    xmlns:html="http://www.w3.org/1999/xhtml"
    xmlns:u="sap.ui.unified">
    <Page id="pageMultiProd" title="Multiple Product Assignments" showNavButton="true" navButtonPress="onBackMulti" showFooter="true">
    <content>
    <Table id="idMultiProdAssign" growing="true"  growingDirection="Downwards" growingThreshold="1000" items="{path: '/MultiProd'}"
                    delete="onTabRowDel" updateFinished="onDimeTabFinish" mode="Delete" rememberSelections="false" selectionChange="onSelectionChange">
                            <headerToolbar>                            
			                    <OverflowToolbar>
                                <content>
                                <Title text="Product Assignment"/>
				                    <ToolbarSpacer/>
                                    <Button id="idAdd" text="Add" press="onAddPress" tooltip="Add row"/>
				                    <Button id="idUpload" text="Upload" press="onUploadPress" tooltip="Upload Excel" enabled="true"/>
                                    <Button id="idDownload" text="Download" press="onDownloadPress" tooltip="Download Excel" enabled="true"/>
			                   </content>
                                </OverflowToolbar>
		                      </headerToolbar>                             
                                <columns>
                                    <Column hAlign="Center" width="auto" vAlign="Middle">
                                        <Text text="Product ID"/>
                                    </Column>
                                    <Column hAlign="Center" width="auto" vAlign="Middle">
                                        <Text text="Reference Product ID"/>
                                    </Column>
                                    <Column hAlign="Center" width="auto" vAlign="Middle">
                                        <Text text="Weight in %" />
                                    </Column>
                                    <Column hAlign="Center" width="auto" vAlign="Middle" >
                                        <Text text="Offset" />
                                    </Column>
                                    <Column hAlign="Center" width="auto" vAlign="Middle" >
                                        <Text text="Active" />
                                    </Column> 
                                     <Column hAlign="Center" width="auto" vAlign="Middle" >
                                        <Text text="Valid From" />
                                    </Column> 
                                    <Column hAlign="Center" width="auto" vAlign="Middle" >
                                        <Text text="Valid To" />
                                    </Column>                          
                                </columns>
                                <items>
                                    <ColumnListItem>
                                        <cells>
                                            <MultiInput showValueHelp="true" valueHelpOnly="true" valueHelpRequest="handleValueHelpInput" value="{NEW_PROD}"/>
                                            <MultiInput showValueHelp="true" valueHelpOnly="true" valueHelpRequest="handleValueHelpInput" value="{REF_PROD}"/>
                                            <Input value="{WEIGHT}" liveChange="onInputChange" />
                                            <Input value="{OFFSET}" liveChange="onInputChange" />
                                            <Switch state="{ACTIVE}" customTextOn="Yes" customTextOff="No" />
                                           <DatePicker value="{VALID_FROM}" displayFormat="YYYY-MM-dd" valueFormat="YYYY-MM-dd" class="disabledInput" change="onFromChange"/>
                                           <DatePicker value="{VALID_TO}" displayFormat="YYYY-MM-dd" valueFormat="YYYY-MM-dd" class="disabledInput" enabled="false"/>
                                        </cells>
                                    </ColumnListItem>
                                </items>
                              </Table>
    </content>
    <footer>
            <OverflowToolbar>
					<ToolbarSpacer/>
                    <Button text="Save" type="Emphasized" visible="true" press="onRefProdSave" />
                     <Button text="Cancel"  visible="true" press="onRefProdCancel" />
                    </OverflowToolbar>
    </footer>
    </Page>
</mvc:View>