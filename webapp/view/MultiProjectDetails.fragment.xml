<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:f="sap.ui.layout.form">
<Dialog id="idPhaseinOut2" title="Maintain Project Details" contentWidth="40vw" contentHeight="auto" afterClose="closeBatchFragment" titleAlignment="Center">
<f:SimpleForm id="idPhaseStart2" editable="true" layout="ResponsiveGridLayout" labelSpanXL="2" labelSpanL="2" labelSpanM="2" labelSpanS="2"
						adjustLabelSpan="false" emptySpanXL="0" emptySpanL="4" emptySpanM="0" emptySpanS="0" columnsXL="2" columnsL="1" columnsM="1"
						singleContainerFullSize="false" ariaLabelledBy="Title1">
						<f:content>
                        <VBox>
                            <VBox>
                            <Label text="Project ID"/>
                            <Input value="" id="idProjID" enabled="false"/>
                            </VBox>
                            <VBox>
                            <Label text="Project Description"/>
                            <Input value="" id="idProjDesc" enabled="true"/>
                            </VBox>
                            <VBox visible="false" id="idswtichbox">
                            <Label text="Active"/>
                            <Switch state="false" customTextOn="Yes" customTextOff="No" change="onSwitchChange" id="idSwitchState"></Switch>
                            </VBox>
                            <VBox id="idRelDateBox" visible="false">
							<Label text="Release Date" required="true"/>
							<DatePicker id="idRelDate" displayFormat="MM/dd/yyyy" valueFormat="MM/dd/yyyy" class="disabledInput"/>
                            </VBox>
                            </VBox>
                        </f:content>
                        </f:SimpleForm>
                        <buttons>
                        <Button id="idSaveRelDet" text="Save" press="onProjSave" type="Emphasized" />
                        <Button id="idCancelRelet" text="Cancel"  press="onProjCancel" />
                        </buttons>
 </Dialog>
</core:FragmentDefinition>