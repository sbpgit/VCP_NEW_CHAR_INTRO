<mvc:View controllerName="vcpapp.vcpnpicharvalue.controller.Home"
   xmlns:mvc="sap.ui.core.mvc" xmlns:core="sap.ui.core"
	displayBlock="true" xmlns="sap.m" xmlns:m="sap.m" xmlns:l="sap.ui.layout" xmlns:ux="sap.uxap" xmlns:f="sap.ui.layout.form"
	xmlns:html="http://www.w3.org/1999/xhtml" xmlns:u="sap.ui.unified">
	<ux:ObjectPageLayout id="ObjectPageLayout">
		<ux:headerTitle>
			<ux:ObjectPageDynamicHeaderTitle>
				<ux:expandedHeading>
					<HBox>
						<Title text="{i18n>title}" class="TitleClass" titleAlignment="Center" wrapping="true"/>						
					</HBox>
				</ux:expandedHeading>
				<ux:snappedHeading>
					<HBox fitContainer="true" alignItems="Center">
						<Title text="{i18n>title}" wrapping="true" class="TitleClass"/>
					</HBox>
				</ux:snappedHeading>
                 <ux:navigationActions>
                            <Button class="classHdr" icon="sap-icon://sys-help" id="idNav3" press="onNavPress" type="Emphasized" tooltip="Help Document" />
                        </ux:navigationActions>
                </ux:ObjectPageDynamicHeaderTitle>
		</ux:headerTitle>
		  <ux:headerContent>
            <FlexBox wrap="Wrap" justifyContent= "Inherit" fitContainer="true">
            <!-- <VBox >
                <Label text=""/>
                <SearchField id="headSearch" search="oHomesearch" liveChange="oHomesearch" width="400px" placeholder="New Char Value/Product/Ref Char Value" />
            </VBox> -->
            <VBox >
                <Label text="Configurable Product" class="flux"/>
                <Input id="idConfigProd" class="flux" width="450px" placeholder="Configurable Product" showValueHelp="true" valueHelpOnly="true" valueHelpRequest="handleValueHelp" />
            </VBox>
            <VBox >
                <Label text="Project Id" class="flux"/>
                <Input id="idProjDet" class="flux" width="250px" placeholder="Project Id" showValueHelp="true" valueHelpOnly="true" valueHelpRequest="handleValueHelp" />
            </VBox>
            <VBox>
            <Label text=""></Label>
            <HBox class="flux1">
             <VBox >                 
                <Button text="Go" class="hom1" type="Emphasized" press="onGetData" tooltip="Get data based on filters" />
              </VBox>
             <VBox >                 
                <Button text="Reset" class="hom1" type="Transparent" press="onResetData" tooltip="Reset" />
             </VBox>   
             </HBox>
             </VBox> 
        </FlexBox>
        </ux:headerContent>
		<ux:sections>
			<ux:ObjectPageSection id="idObjPageSec">
				<ux:subSections>
					<ux:ObjectPageSubSection id="idObjPageSubSec">
						<ux:blocks>
                        	<IconTabBar id="idIconTabBarInlineMode"	headerMode="Inline" class="sapUiResponsiveContentPadding" >
		<items>
        <IconTabFilter	text="Mantain Project Details" key="MPD">
                 <Table id="idMPD" growing="true"  growingDirection="Downwards" growingThreshold="1000" 
                              updateFinished="onTableUpdate" items="{path: '/projDetails', sorter:{path:'PROJECT_ID'}}"  itemPress="onhandlePress"  
                              mode="SingleSelectLeft"   selectionChange="onhandlePress" rememberSelections="false"> 
                              <headerToolbar>
			                    <OverflowToolbar>
                                <!-- <Title  text="Project Details"></Title> -->
                                <SearchField id="newProjSearch" search="oHomesearch" liveChange="oHomesearch" width="135vh" placeholder="Project ID/Project Details" />
				                    <ToolbarSpacer/>
				                    <ToggleButton id="idToggleButton2" text="Add" press="onAddPressed" tooltip="OnAdd" icon="sap-icon://slim-arrow-down">
                                    </ToggleButton>
                                    <Button text="Edit" id="idEdit" press="onEditPress" enabled="true"/>
			                    </OverflowToolbar>
		                      </headerToolbar>                             
                                <columns>
                                    <Column hAlign="Center" width="auto" vAlign="Middle">
                                        <Text text="Project ID" />
                                    </Column>
                                    <Column hAlign="Center" width="auto" vAlign="Middle" >
                                        <Text text="Project Details" />
                                    </Column>
                                    <Column hAlign="Center" width="auto" vAlign="Middle" >
                                        <Text text="Status" />
                                    </Column>
                                    <Column hAlign="Center" width="auto" vAlign="Middle">
                                        <Text text="Release Date" />
                                    </Column>                                                               
                                </columns>
                                <items>
                                    <ColumnListItem>
                                        <cells>
                                            <Text text="{PROJECT_ID}" />    
                                            <Text text="{PROJECT_DET}" />
                                            <Text text= "{PROJ_STATUS}" />
                                            <Text text= "{path:'RELEASE_DATE', type:'sap.ui.model.type.Date', formatOptions : { pattern:'MM/dd/yyyy',style:'medium', UTC: true}}" />
                                        </cells>
                                    </ColumnListItem>
                                </items>
                              </Table>	
			</IconTabFilter>
		<IconTabFilter	text="Characteristic Value Replacement"	key="CVP">
				<Table id="idOrderList" growing="true"  growingDirection="Downwards" growingThreshold="1000" 
                              updateFinished="onTableUpdate" items="{path: '/configProdResults'}"  itemPress="onhandlePress"  
                              mode="SingleSelectMaster"   selectionChange="onhandlePress" rememberSelections="false"> 
                              <headerToolbar>
			                    <OverflowToolbar>
                                <!-- <Title  text="Characteristic Value Replacement"></Title> -->
                                <SearchField id="newCharSearch" search="oHomesearch" liveChange="oHomesearch" width="135vh" placeholder="New Char Value/Product/Ref Char Value" />
				                    <ToolbarSpacer/>
				                    <ToggleButton id="idToggleButton" text="Add" press="onAddPressed" tooltip="OnAdd" icon="sap-icon://slim-arrow-down">
                                    </ToggleButton>
			                    </OverflowToolbar>
		                      </headerToolbar>                             
                                <columns>
                                <Column hAlign="Center" width="auto" vAlign="Middle">
                                        <Text text="Project Id" />
                                    </Column>
                                    <Column hAlign="Center" width="auto" vAlign="Middle">
                                        <Text text="New Characteristic Value" />
                                    </Column>
                                    <Column hAlign="Center" width="auto" vAlign="Middle" >
                                        <Text text="Product Id" />
                                    </Column>
                                    <Column hAlign="Center" width="auto" vAlign="Middle" >
                                        <Text text="Product Desc" />
                                    </Column>
                                    <Column hAlign="Center" width="auto" vAlign="Middle">
                                        <Text text="Reference Char Value" />
                                    </Column>
                                    <Column hAlign="Center" width="auto" vAlign="Middle">
                                        <Text text="Reference Char Value Desc" />
                                    </Column>
                                    <Column hAlign="Center" width="auto" vAlign="Middle">
                                        <Text text="Reference Char Name" />
                                    </Column>
                                      <Column hAlign="Center" width="auto" vAlign="Middle">
                                        <Text text="Weight in %" />
                                    </Column>
                                    <Column hAlign="Center" width="auto" vAlign="Middle">
                                        <Text text="Status" />
                                    </Column>                                
                                </columns>
                                <items>
                                    <ColumnListItem>
                                        <cells>
                                        <Text text="{PROJECT_ID}" />  
                                            <Text text="{CHAR_VALUE}" />    
                                            <Text text="{REF_PRODID}" />
                                            <Text text= "{PROD_DESC}" />
                                            <Text text= "{REF_CHAR_VALUE}" />
                                            <Text text= "{REF_CHAR_DESC}" />
                                            <Text text= "{REF_CHAR_NAME}" />                                            
                                            <Text text= "{WEIGHT}" />
                                            <Text text= "{ACTIVE}" />
                                        </cells>
                                    </ColumnListItem>
                                </items>
                              </Table>
			</IconTabFilter>

		<IconTabFilter	text="Phase Out"	key="PhaseOutId">	
                <Table id="idPhaseOutList" growing="true"  growingDirection="Downwards" growingThreshold="1000" 
                              updateFinished="onTableUpdate" items="{path: '/phaseOutDet'}"  itemPress="onhandlePress"  
                              mode="SingleSelectMaster"   selectionChange="onhandlePress" rememberSelections="false"> 
                              <headerToolbar>
			                    <OverflowToolbar>
                                <!-- <Title  text="Phase Out Details"></Title> -->
                                <SearchField id="newPhaseSearch" search="oHomesearch" liveChange="oHomesearch" width="135vh" placeholder="Ref Product ID/Char Num/Location/Product ID" />
				                    <ToolbarSpacer/>
				                    <ToggleButton id="idToggleButton1" text="Add" press="onAddPressed" tooltip="OnAdd" icon="sap-icon://slim-arrow-down">
                                    </ToggleButton>
			                    </OverflowToolbar>
		                      </headerToolbar>                             
                                <columns>
                                <Column hAlign="Center" width="auto" vAlign="Middle">
                                        <Text text="Project Id" />
                                    </Column>
                                    <Column hAlign="Center" width="auto" vAlign="Middle">
                                        <Text text="Reference Product ID" />
                                    </Column>
                                    <Column hAlign="Center" width="auto" vAlign="Middle" >
                                        <Text text="Char Num" />
                                    </Column>
                                    <Column hAlign="Center" width="auto" vAlign="Middle" >
                                        <Text text="Char Value" />
                                    </Column>
                                    <Column hAlign="Center" width="auto" vAlign="Middle">
                                        <Text text="Location Id" />
                                    </Column>
                                    <Column hAlign="Center" width="auto" vAlign="Middle">
                                        <Text text="Product Id" />
                                    </Column>
                                    <Column hAlign="Center" width="auto" vAlign="Middle">
                                        <Text text="Phase Out Start" />
                                    </Column>
                                      <Column hAlign="Center" width="auto" vAlign="Middle">
                                        <Text text="Phase Out End" />
                                    </Column>                             
                                </columns>
                                <items>
                                    <ColumnListItem>
                                        <cells>

                                            <Text text="{PROJECT_ID}" /> 
                                            <Text text="{REF_PRODID}" />    
                                            <Text text="{CHAR_NUM}" />
                                            <Text text= "{CHAR_VALUE}" />
                                            <Text text= "{LOCATION_ID}" />
                                            <Text text= "{PRODUCT_ID}" />
                                            <Text text= "{path:'PHASE_OUT_START', type:'sap.ui.model.type.Date', formatOptions : {pattern:'MM/dd/yyyy', style:'medium', UTC: true}}" />                                            
                                            <Text text= "{path:'PHASE_OUT_END', type:'sap.ui.model.type.Date', formatOptions : {pattern:'MM/dd/yyyy', style:'medium', UTC: true}}" />
                                        </cells>
                                    </ColumnListItem>
                                </items>
                              </Table>			
			</IconTabFilter>
        <!-- <IconTabFilter  text="Add" class="IconClass"></IconTabFilter> -->
		</items>
	</IconTabBar>
                         
                        </ux:blocks>
					</ux:ObjectPageSubSection>
				</ux:subSections>
			</ux:ObjectPageSection>
		</ux:sections>
	</ux:ObjectPageLayout>
</mvc:View>
