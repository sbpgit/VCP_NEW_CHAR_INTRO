<mvc:View xmlns:footerbar="sap.ushell.ui.footerbar" controllerName="vcpapp.vcpnpicharvalue.controller.Home"
   xmlns:mvc="sap.ui.core.mvc" xmlns:core="sap.ui.core"
	displayBlock="true" xmlns="sap.m" xmlns:m="sap.m" xmlns:l="sap.ui.layout" xmlns:ux="sap.uxap" xmlns:f="sap.ui.layout.form"
	xmlns:html="http://www.w3.org/1999/xhtml" xmlns:u="sap.ui.unified">
    <Page  showFooter="true">
    <customHeader>
			<Toolbar>
				<Button id="leftMenu" icon="sap-icon://nav-back"  press="onBackToMPD" type="Transparent" visible="true"/>
				<ToolbarSpacer/>
				<Title id="idprojTitle" text="" />
				<ToolbarSpacer/>
				<Button class="classHdr" icon="sap-icon://sys-help" id="idNav3" press="onNavPress" type="Emphasized" tooltip="Help Document" />
			</Toolbar>
		</customHeader>
	<ux:ObjectPageLayout id="ObjectPageLayout">
		<ux:sections>
			<ux:ObjectPageSection id="idObjPageSec">
				<ux:subSections>
					<ux:ObjectPageSubSection id="idObjPageSubSec">
						<ux:blocks>
                        	<IconTabBar id="idIconTabBarInlineMode"	headerMode="Inline" class="sapUiResponsiveContentPadding" >
		<items>
		<IconTabFilter	text="Characteristic Value Replacement"	key="CVP">
				<Table id="idOrderList" growing="true"  growingDirection="Downwards" growingThreshold="1000" 
                              updateFinished="onTableUpdate" items="{path: '/configProdResults'}"  itemPress="onhandlePress"  
                              mode="SingleSelectMaster"   selectionChange="onhandlePress" rememberSelections="false"> 
                              <headerToolbar>
			                    <OverflowToolbar>
                                <!-- <Title  text="Characteristic Value Replacement"></Title> -->
                                <HBox >
                                    <Label text="Config Product" class="sapUiTinyMarginTop sapUiTinyMarginEnd"/>
                                    <Input id="idConfProd" width="250px" placeholder="Configurable Product" showValueHelp="true" valueHelpOnly="true" valueHelpRequest="handleValueHelp" />
                                </HBox>
                                <SearchField id="newCharSearch" search="oHomesearch" liveChange="oHomesearch" width="50vh" placeholder="New Char Value/Product/Ref Char Value" />
				                    <Button text="Reset Data" class="hom1" type="Transparent" press="onResetData" tooltip="Reset" />
                                    <ToolbarSpacer/>
                                    <Button text="Characteristic Value Replacement" press="onCharValRep" tooltip="Add New Char Value" id="idCharValRep" />
			                    </OverflowToolbar>
		                      </headerToolbar>                             
                                <columns>
                                    <Column hAlign="Center" width="auto" vAlign="Middle" >
                                        <Text text="Config Product" />
                                    </Column>
                                    <Column hAlign="Center" width="auto" vAlign="Middle">
                                        <Text text="New Characteristic Value" />
                                    </Column>                             
                                    
                                    <Column hAlign="Center" width="auto" vAlign="Middle">
                                        <Text text="Reference Char Value" />
                                    </Column>
                                    <Column hAlign="Center" width="auto" vAlign="Middle">
                                        <Text text="Char Name" />
                                    </Column>
                                      <Column hAlign="End" width="auto" vAlign="Middle">
                                        <Text text="Weight in %" />
                                    </Column>
                                    <Column hAlign="Center" width="auto" vAlign="Middle">
                                        <Text text="Valid From" />
                                    </Column> 
                                     <Column hAlign="Center" width="auto" vAlign="Middle">
                                        <Text text="Valid To" />
                                    </Column> 
                                    <Column hAlign="Center" width="auto" vAlign="Middle">
                                        <Text text="" />
                                    </Column>                                
                                </columns>
                                <items>
                                    <ColumnListItem>
                                        <cells>
                                            <ObjectIdentifier title="{PROD_DESC}" text ="{REF_PRODID}"/>
                                            <ObjectIdentifier title="{CHARVAL_DESC}" text ="{CHAR_VALUE}"/>
                                            <ObjectIdentifier title="{REF_CHARVALUE_DESC}" text ="{REF_CHAR_VALUE}"/>
                                            <ObjectIdentifier title="{REF_CHAR_DESC}" text= "{REF_CHAR_NAME}" />   
                                            <Text text= "{WEIGHT}"/>
                                            <Text text= "{path:'VALID_FROM', type:'sap.ui.model.type.Date', formatOptions : { pattern:'MM/dd/yyyy',style:'medium', UTC: false}}"/>
                                            <Text text= "{path:'VALID_TO', type:'sap.ui.model.type.Date', formatOptions : { pattern:'MM/dd/yyyy',style:'medium', UTC: false}}"/>
                                            <HBox>
                                            <Button  press="onCharValEdit" tooltip="Edit" icon="sap-icon://edit" enabled="{ACTIVE}"/>
                                            <Button  press="onCharValCopy" tooltip="Copy" icon="sap-icon://copy" class="buttonSpace" enabled="{ACTIVE}"/>
                                            <Button  press="onCharValDelete" tooltip="Delete" icon="sap-icon://delete" class="buttonSpace" enabled="{ACTIVE}"/>
                                            </HBox>
                                        </cells>
                                    </ColumnListItem>
                                </items>
                              </Table>
			</IconTabFilter>

		<IconTabFilter	text="Phase Out"	key="PhaseOutId">	
                <Table id="idPhaseOutList" growing="true"  growingDirection="Downwards" growingThreshold="1000" 
                              updateFinished="onTableUpdate" items="{path: '/phaseOutDet'}"  itemPress="onhandlePress"  
                              mode="None"   selectionChange="onhandlePress" rememberSelections="false"> 
                              <headerToolbar>
			                    <OverflowToolbar>
                                <SearchField id="newPhaseSearch" search="oHomesearch" liveChange="oHomesearch" width="50vh" placeholder="Ref Product ID/Char Num/Location/Product ID" />
				                    <ToolbarSpacer/>
                                    <Button text="Phase-Out" press="onPhaseOutPress" tooltip="Add Phase-Out Details" />
			                    </OverflowToolbar>
		                      </headerToolbar>                             
                                <columns>
                                    <Column hAlign="Center" width="auto" vAlign="Middle">
                                        <Text text="Reference Product ID" />
                                    </Column>
                                    <Column hAlign="Center" width="auto" vAlign="Middle" >
                                        <Text text="Char Num" />
                                    </Column>
                                    <Column hAlign="Center" width="auto" vAlign="Middle" >
                                        <Text text="Char Value" />
                                    </Column>
                                    <Column hAlign="Center" width="auto" vAlign="Middle">
                                        <Text text="Location Id" />
                                    </Column>
                                    <Column hAlign="Center" width="auto" vAlign="Middle">
                                        <Text text="Product Id" />
                                    </Column>
                                    <Column hAlign="Center" width="auto" vAlign="Middle">
                                        <Text text="Phase Out Start" />
                                    </Column>                        
                                </columns>
                                <items>
                                    <ColumnListItem>
                                        <cells>
                                            <Text text="{REF_PRODID}" />    
                                            <Text text="{CHAR_NUM}" />
                                            <Text text= "{CHAR_VALUE}" />
                                            <Text text= "{LOCATION_ID}" />
                                            <Text text= "{PRODUCT_ID}" />
                                            <Text text= "{path:'PHASE_OUT_START', type:'sap.ui.model.type.Date', formatOptions : {pattern:'MM/dd/yyyy', style:'medium', UTC: true}}" />                                            
                                        </cells>
                                    </ColumnListItem>
                                </items>
                              </Table>			
			</IconTabFilter>
		</items>
	</IconTabBar>
                         
                        </ux:blocks>
					</ux:ObjectPageSubSection>
				</ux:subSections>
			</ux:ObjectPageSection>
		</ux:sections>
	</ux:ObjectPageLayout>
<footer>
 <OverflowToolbar>
            
			<ToolbarSpacer/>
            <Button text="Maintain Unique ID's" press="onShowUniqueIds" tooltip="Show Unique ID's" id="idMaintainUID" />
            <Button text="Generate Unique ID's" press="onGenerateUniqueIds" tooltip="Generate Unique ID's" id="idGenUID"/>
				                   
	</OverflowToolbar></footer>
    </Page>
</mvc:View>
